generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Customer {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  phone     String
  cpf       String   @unique
  age       Int
  address   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
